@model IEnumerable<StudentManagementMVCLinq.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create Student", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.studFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.studLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.studYear)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.studFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.studLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.studYear)
        </td>
        <td>
            @Html.ActionLink("Update", "Edit", new { id=item.studId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.studId })
        </td>
    </tr>
}

</table>
